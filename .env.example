# Application Configuration
VITE_APP_URL=http://localhost:8080

# Supabase Configuration
# Get these from https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Optional: For production
VITE_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Security Keys
JWT_SECRET=your_super_secure_jwt_secret_32_characters_long
ENCRYPTION_MASTER_PASSWORD=your_master_encryption_password
ANONYMIZATION_KEY=your_anonymization_key_for_analytics

# Email Service Configuration (Choose one)
# SendGrid (Recommended)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@your-domain.com
SENDGRID_FROM_NAME=UPI Piggy

# Or Mailgun
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your-domain.com

# Or AWS SES
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
SES_FROM_EMAIL=noreply@your-domain.com

# Payment Gateway (Razorpay - FREE for testing)
VITE_RAZORPAY_KEY_ID=your_razorpay_key_id
VITE_RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Investment Platform (When you're ready to scale)
VITE_ZERODHA_API_KEY=your_zerodha_api_key
VITE_ZERODHA_API_SECRET=your_zerodha_api_secret

# External APIs (FREE tiers available)
VITE_NSE_API_KEY=your_nse_api_key
VITE_ALPHA_VANTAGE_KEY=your_alpha_vantage_key

# Monitoring & Analytics (Optional)
SENTRY_DSN=your_sentry_dsn
VITE_GOOGLE_ANALYTICS_ID=your_ga_id
VITE_HOTJAR_ID=your_hotjar_id

# Development
NODE_ENV=development
